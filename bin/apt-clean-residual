#!/usr/bin/env python3

import os
import sys
import subprocess

I18N = {
    "zh_CN.UTF-8": r"\[配置文件残留\]",
    "en.UTF-8": r"\[residual-config\]",
    "C.UTF-8": r"\[residual-config\]"
}

IGNORES = [
    "linux-image-",
    "linux-modules-"
]


def IsIgnore(pkg: str) -> bool:
    for e in IGNORES:
        if pkg.startswith(e):
            return True
    return False


def Clean():
    search = I18N[os.getenv("LANG")]
    output = subprocess.getoutput('apt list|grep "%s"' % search).split('\n')
    print(output)
    for each in output:
        pkg = each.split('/')
        if len(pkg) != 2:
            continue
        pkg = pkg[0]
        if IsIgnore(pkg):
            continue
        print("清理 " + pkg)
        os.system("apt purge -y " + pkg)


if __name__ == "__main__":
    Clean()
